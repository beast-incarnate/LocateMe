<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kunalsingh.locateme.PhoneNumberActivity">

    <TextView
        android:id="@+id/tv_phone_number"
        android:text="Enter Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_one"
        android:inputType="number"
        android:maxLength="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_two"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_three"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_four"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_five"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_six"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_seven"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_eight"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_nine"
        android:inputType="number"
        android:maxLength="1"
        android:layout_toRightOf="@id/et_number_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/tv_phone_number"
        android:id="@+id/et_number_ten"
        android:maxLength="1"
        android:inputType="number"
        android:layout_toRightOf="@id/et_number_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_phone_number"
        android:text="Submit"
        android:layout_below="@id/et_number_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
